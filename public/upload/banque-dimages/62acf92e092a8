class P {
    int l, h;
    
    public:
        void set_val(int x, int y) {
            l = x; h = y;
        }
        int surface() {
            return 0;
        }
};

class R: public P {

    public:

        int surface() {
            return l * h;
        }
};

class T: public P {

    public:

        int surface() {
            return (l * h / 2);
        }
};

int main() {
    R r;
    T t;
    P p;
    P *ptr[3] = {&r, &t, &p};
    for(int i = 0; i < 3; i++) {
        ptr[i]->set_val(4, 3);
    }
    for(int i = 0; i < 3; i++) {
        cout << ptr[i]->surface() << endl;
    }
}